@import "/styles/reset.wxss";

/**app.wxss**/
page{
  --txtTheme:#13B45B;
  --tab-font-size:30rpx;
  --tab-active-text-color:#13B45B;
  --font-weight-bold:800;
  --tab-text-color:#333;
}
/* 空列表 */
.emptyHint {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
}
.emptyHint>image {
  width: 140rpx;
  height: 140rpx;
}
.emptyHint>.hintTxt {
  font-size: 24rpx;
  color: #999;
  margin-top: 42rpx;
}