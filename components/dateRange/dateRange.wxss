/* componen/dateRange/dateRange.wxss */
.dateRangeShade{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 0 60rpx;
  box-sizing: border-box;
}
.dateRange{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.dateRange_main{
  background: #fff;
  width: 100%;
  border-radius:10rpx;
  padding: 40rpx 40rpx 60rpx;
  box-sizing: border-box;
}
.topDate{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
}
.input{
  width: 216rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-bottom: 4rpx solid #CCCCCC;
  font-size: 34rpx;
  text-align: center;
  color: #13B45B;
}
.activeBorder{
  border-bottom: 4rpx solid #13B45B;
}
.placeholder{
  color: #ccc;
}
.cancelIcon{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.picker-view{
  margin-top: 30rpx;
  margin-bottom: 24rpx;
}
.picker-view-item{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.footHandle{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.btn{
  width:258rpx;
  height:90rpx;
  border-radius:6rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}
.emptyBtn{
  background:rgba(255,255,255,1);
  border:2rpx solid #13B45B;
  color: #13B45B;
}
.sureBtn{
  background:#13B45B;
  color: #fff
}